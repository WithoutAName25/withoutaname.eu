@import "themes.pcss";

*,
::before,
::after {
  box-sizing: border-box;
}

:where(*) {
  margin: 0;
  scroll-behavior: smooth;
}

body {
  font-family: var(--font-sans);
  overflow-x: hidden;
}

#nprogress {
  pointer-events: none;

  & .bar {
    background: var(--brand);
    opacity: 0.75;
    position: fixed;
    z-index: 1000;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
  }
}

.display-none {
  display: none;
}
