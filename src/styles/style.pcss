@import "open-props/postcss/normalize";
@import "themes.pcss";

:where(svg:not([width])) {
  inline-size: auto;
}

#nprogress {
  pointer-events: none;

  & .bar {
    background: var(--brand);
    opacity: 0.75;
    position: fixed;
    z-index: 1031;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
  }
}
